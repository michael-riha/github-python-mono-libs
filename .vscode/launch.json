{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Python: Remote Attach",
          "type": "python",
          "request": "attach",
          "connect": {
              "host": "localhost",
              "port": 5678
          },
          "pathMappings": [
            {
                "localRoot": "${workspaceFolder}/app",
                "remoteRoot": "/usr/src/app"
            },
            {
                "localRoot": "${workspaceFolder}/libs",
                "remoteRoot": "/opt/libs"
            }
          ]
      },
      {
        "name": "Python: Remote Attach Tests (5679)",
        "type": "python",
        "request": "attach",
        "connect": {
            "host": "localhost",
            "port": 5679
        },
        "pathMappings": [
          {
              "localRoot": "${workspaceFolder}/app",
              "remoteRoot": "/usr/src/app"
          },
          {
              "localRoot": "${workspaceFolder}/libs",
              "remoteRoot": "/opt/libs"
          }
        ]
    }
  ]
}
